{
  "manifest_version": 2,

  "name": "OnLoad scripts",
  "description": "This extension allows us to run scripts when the page loads",
  "version": "1.0",

  "content_scripts": [
    {
      "matches": ["*://*/*", "file:///*"],
      "js": ["onload.js" ],
      "run_at":"document_end",
      "all_frames" : true
    }
  ],
  
  "permissions": [
    "storage"
  ],

  "options_ui" : {
    "page": "options.html",
    "chrome_style": true
  },

  "icons": { "48": "ols48.png",
            "128": "ols.png" 
  }
}
